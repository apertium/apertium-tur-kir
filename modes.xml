<?xml version="1.0" encoding="UTF-8"?>
<modes>
 
  <mode name="tur-kir-morph" install="no">
    <pipeline>
      <program name="hfst-proc -w">
        <file name="tur-kir.automorf.hfst"/>
      </program>
    </pipeline>
  </mode>
 
  <mode name="tur-kir-cg" install="no">
    <pipeline>
      <program name="hfst-proc">
        <file name="tur-kir.automorf.hfst"/>
      </program>
      <program name="cg-proc">
        <file name="tur-kir.rlx.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="tur-kir-tagger" install="no">
    <pipeline>
      <program name="hfst-proc">
        <file name="tur-kir.automorf.hfst"/>
      </program>
      <program name="cg-proc">
        <file name="tur-kir.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="tur-kir.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
    </pipeline>
  </mode>

  <mode name="tur-kir-biltrans" install="no">
    <pipeline>
      <program name="hfst-proc">
        <file name="tur-kir.automorf.hfst"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="tur-kir.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="tur-kir.autobil.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="tur-kir-transfer" install="no">
    <pipeline>
      <program name="hfst-proc">
        <file name="tur-kir.automorf.hfst"/>
      </program>
      <program name="cg-proc">
        <file name="tur-kir.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="tur-kir.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="tur-kir.autobil.bin"/>
      </program>
      <program name="apertium-transfer -b">
        <file name="apertium-tur-kir.tur-kir.t1x"/>
        <file name="tur-kir.t1x.bin"/>
      </program>
    </pipeline>
  </mode>

  <mode name="tur-kir-debug" install="no">
    <pipeline>
      <program name="hfst-proc">
        <file name="tur-kir.automorf.hfst"/>
      </program>
      <program name="cg-proc">
        <file name="tur-kir.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="tur-kir.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="tur-kir.autobil.bin"/>
      </program>
      <program name="apertium-transfer -b">
        <file name="apertium-tur-kir.tur-kir.t1x"/>
        <file name="tur-kir.t1x.bin"/>
      </program>
      <program name="hfst-proc -d">
        <file name="tur-kir.autogen.hfst"/>
      </program>
    </pipeline>
  </mode>

  <mode name="tur-kir" install="yes">
    <pipeline>
      <program name="hfst-proc">
        <file name="tur-kir.automorf.hfst"/>
      </program>
      <program name="cg-proc">
        <file name="tur-kir.rlx.bin"/>
      </program>
      <program name="apertium-tagger -g $2">
        <file name="tur-kir.prob"/>
      </program>
      <program name="apertium-pretransfer"/>
      <program name="lt-proc -b">
        <file name="tur-kir.autobil.bin"/>
      </program>
      <program name="apertium-transfer -b">
        <file name="apertium-tur-kir.tur-kir.t1x"/>
        <file name="tur-kir.t1x.bin"/>
      </program>
      <program name="hfst-proc $1">
        <file name="tur-kir.autogen.hfst"/>
      </program>
    </pipeline>
  </mode>
</modes>
